{
  "phpcs.standard": "Drupal",
  "breadcrumbs.enabled": true,
  "css.validate": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrapColumn": 120,
  "editor.wordWrap": "off",
  "editor.detectIndentation": true,
  "editor.rulers": [
    80
  ],
  "files.associations": {
    "*.inc": "php",
    "*.module": "php",
    "*.install": "php",
    "*.theme": "php",
    "*.tpl.php": "php",
    "*.test": "php",
    "*.php": "php"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "html.format.wrapLineLength": 80,
  "telemetry.enableTelemetry": false,

  "emptyIndent.removeIndent": true,
  "emptyIndent.highlightIndent": false,
  "emptyIndent.highlightColor": "rgba(246,36,89,0.6)",

  "crane.showStatusBarBugReportLink": false,

  "crane.ignoredPaths": [
    "sites/default/files/*",
    "vendor/*",
    "core/themes/*",
    "core/tests/*",
    "core/scripts/*",
    "core/profiles/*",
    "core/misc/*",
    "core/assets/vendor/*",
    "themes/*",
    "sites/*"
  ],
  "editor.matchBrackets": "never",
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "sqltools.connections": [
    {
      "database": "russelljones",
      "dialect": "MySQL",
      "isActive": false,
      "isConnected": false,
      "name": "dashboard-cms",
      "password": "d3vpass321",
      "port": 16001,
      "server": "localhost",
      "username": "russelljones"
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.git/**": true,
    "**/.svn/**": true,
    "**/.hg/**": true,
    "**/CVS/**": true,
    "**/.DS_Store/**": true,
    "**/bower_components/**": true,
    "**/.config/**": true,
    "**/.history/**": true,
    "**/contrib/**": false,
    "**/web/core/**": true
  },
  "explorerExclude.backup": null,
  "editor.defaultFormatter": "vscode.php-language-features",
  "editor.formatOnPaste": true,
  "prettier.requirePragma": true,
  "prettier.insertPragma": true,
  "php-cs-fixer.rules": "Drupal",
  "phpstan.path": "${rootPath}/vendor/phpstan/phpstan/phpstan"
}

