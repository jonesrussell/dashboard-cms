{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vessel: 'drupal site:install'",
      "type": "shell",
      "command": "./vessel exec app ./bin/drupal site:install varbase --force --langcode='en'  --db-type='mysql'  --site-name='Dashboard CMS'  --site-mail='admin@example.com'  --account-name='admin'  --account-mail='admin@example.com'  --account-pass='p455w0rd'",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "vessel: start",
      "type": "shell",
      "command": "./vessel start",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "vessel: stop",
      "type": "shell",
      "command": "./vessel stop",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "vessel: status",
      "type": "shell",
      "command": "./vessel",
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "vessel: drush cr",
      "type": "shell",
      "command": "./vessel drush cr",
      "isBackground": false,
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "vessel: drush updb",
      "type": "shell",
      "command": "./vessel drush updb",
      "isBackground": false,
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "vessel: zsh",
      "type": "shell",
      "command": "./vessel exec --user vessel app zsh",
      "isBackground": false,
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "electron-debug",
      "type": "process",
      "command": "./node_modules/.bin/vue-cli-service",
      "windows": {
        "command": "./node_modules/.bin/vue-cli-service.cmd"
      },
      "isBackground": true,
      "args": ["electron:serve", "--debug"],
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ""
        },
        "background": {
          "beginsPattern": "Starting development server\\.\\.\\.",
          "endsPattern": "Not launching electron as debug argument was passed\\."
        }
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
